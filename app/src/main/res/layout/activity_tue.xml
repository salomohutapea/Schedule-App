<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#030616"
        android:layout_height="match_parent"
        tools:context=".Tue">

    <TextView android:layout_width="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="32dp"
              android:layout_height="wrap_content" android:text="Schedule" android:textSize="40dp"/>
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent" android:layout_height="match_parent">
        <ScrollView android:layout_width="wrap_content" android:layout_height="wrap_content">
            <android.support.constraint.ConstraintLayout android:paddingBottom="16dp" android:paddingEnd="16dp"
                                                         android:layout_width="wrap_content"
                                                         android:layout_gravity="left"
                                                         android:orientation="vertical"
                                                         android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                        android:id="@+id/CardMon"
                        android:layout_width="50dp"
                        android:backgroundTint="@color/colorNotActive"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="10dp"
                        android:layout_height="50dp" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                >

                    <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent"
                                  android:layout_gravity="center" android:gravity="center">
                        <TextView android:textColor="@color/colorWhite" android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textAlignment="center" android:text="MON"/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                        android:id="@+id/CardTue"
                        android:layout_width="50dp"
                        android:backgroundTint="@color/colorActive"
                        android:background="#FFFFFF"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="10dp"
                        android:layout_height="50dp" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/CardMon" android:layout_marginBottom="8dp"
                        app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent"
                                  android:layout_gravity="center" android:gravity="center">
                        <TextView android:textColor="@color/colorWhite" android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textAlignment="center" android:text="TUE"/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                        android:id="@+id/CardWed"
                        android:layout_width="50dp"
                        android:backgroundTint="@color/colorNotActive"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="10dp"
                        android:layout_height="50dp" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/CardTue" android:layout_marginBottom="8dp"
                        app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent"
                                  android:layout_gravity="center" android:gravity="center">
                        <TextView android:textColor="@color/colorWhite" android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textAlignment="center" android:text="WED"/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                        android:id="@+id/CardThu"
                        android:layout_width="50dp"
                        android:backgroundTint="@color/colorNotActive"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="10dp"
                        android:layout_height="50dp" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/CardWed" android:layout_marginBottom="8dp"
                        app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent"
                                  android:layout_gravity="center" android:gravity="center">
                        <TextView android:textColor="@color/colorWhite" android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textAlignment="center" android:text="THU"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                        android:id="@+id/CardFri"
                        android:layout_width="50dp"
                        android:backgroundTint="@color/colorNotActive"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="10dp"
                        android:layout_height="50dp" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/CardThu" android:layout_marginBottom="8dp"
                        app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent"
                                  android:layout_gravity="center" android:gravity="center">
                        <TextView android:textColor="@color/colorWhite" android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textAlignment="center" android:text="FRI"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </android.support.constraint.ConstraintLayout>

        </ScrollView>
        <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
            <android.support.constraint.ConstraintLayout android:paddingBottom="16dp"
                                                         android:layout_width="match_parent"
                                                         android:layout_gravity="left"
                                                         android:orientation="vertical"
                                                         android:layout_height="wrap_content">

                <android.support.design.card.MaterialCardView
                        app:layout_goneMarginTop="16dp"
                        app:strokeWidth="2dp"
                        app:strokeColor="@color/colorActive"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:id="@+id/CardMonSchedules1"
                        android:layout_width="match_parent"
                        android:backgroundTint="@color/colorSchedules"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="10dp"
                        android:layout_height="wrap_content" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                        app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout android:padding="16dp" android:layout_width="match_parent"
                                  android:orientation="horizontal"
                                  android:layout_height="match_parent">
                        <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                      android:text="13.00"/>
                        </LinearLayout>

                        <LinearLayout android:layout_marginLeft="16dp" android:layout_width="wrap_content"
                                      android:orientation="vertical" android:layout_height="match_parent">
                            <TextView android:textSize="18dp" android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:text="MATEMATIKA DISKRET DAN LOGIKA"/>
                            <android.support.design.card.MaterialCardView android:layout_marginTop="5dp"
                                                                          android:layout_width="wrap_content"
                                                                          android:backgroundTint="@color/colorClass"
                                                                          android:layout_height="wrap_content"
                                                                          app:cardCornerRadius="9dp">
                                <TextView android:textAlignment="center" android:layout_gravity="center"
                                          android:gravity="center" android:layout_marginHorizontal="5dp"
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:text="TE2" android:textColor="@color/colorWhite"/>

                            </android.support.design.card.MaterialCardView>

                            <android.support.design.card.MaterialCardView android:id="@+id/materiMatdislog"
                                                                          android:layout_marginTop="5dp"
                                                                          android:layout_width="wrap_content"
                                                                          android:backgroundTint="@color/colorSchedules"
                                                                          app:strokeColor="@color/colorLink"
                                                                          app:strokeWidth="2dp"
                                                                          android:layout_height="wrap_content"
                                                                          app:cardCornerRadius="9dp">
                                <TextView android:textAlignment="center" android:layout_gravity="center"
                                          android:gravity="center" android:layout_margin="5dp"
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:text="Materi" android:textColor="@color/colorWhite"/>

                            </android.support.design.card.MaterialCardView>

                        </LinearLayout>

                    </LinearLayout>
                </android.support.design.card.MaterialCardView>

            </android.support.constraint.ConstraintLayout>

        </ScrollView>
    </LinearLayout>
</LinearLayout>